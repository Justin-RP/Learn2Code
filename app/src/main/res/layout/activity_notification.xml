<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScheduledNotification.NotificationActivity">

    <EditText
        android:id="@+id/notiEtName"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/notiEtDesc"
        android:hint="Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/notiBtnStartDefault"
        android:text="start Default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/notiBtnStartHigh"
        android:text="start High"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/notiBtnStartBigText"
        android:text="start BigText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>